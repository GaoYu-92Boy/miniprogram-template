<!--components/custom-navbar/index.wxml-->
<view catchtap="handleBackTop" class="custom-navbar">
  <van-nav-bar
    fixed="{{fixed}}"
    placeholder="{{placeholder}}"
    border="{{border}}"
    custom-style="{{customStyle}}"
    title-class="title-class"
    title="{{title}}"
    z-index="100"
  >
    <view slot="left" class="left-container">
      <view wx:if="{{isHome}}" catchtap="reLaunchHome" class="home">
        <custom-image
          src="/assets/images/custom-nav-bar/home.png"
          width="48rpx"
          height="48rpx"
          show-loading="{{false}}"
        />
      </view>
      <view wx:if="{{isBack}}" catchtap="navigateBack" class="back">
        <custom-image
          src="/assets/images/custom-nav-bar/back.png"
          width="48rpx"
          height="48rpx"
          show-loading="{{false}}"
        />
      </view>
      <view wx:if="{{isClose}}" catchtap="navigateBack" class="back">
        <custom-image
          src="/assets/images/custom-nav-bar/close.png"
          width="48rpx"
          height="48rpx"
          show-loading="{{false}}"
        />
      </view>
      <view wx:if="{{isSlot}}" class="navbar-comp-slot">
        <slot />
      </view>
    </view>
    <view slot="title">
      <view>
        <slot name="title" />
      </view>
    </view>
  </van-nav-bar>
</view>
